<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".view.fragment_admin.FrAdminUploadMusic">
    <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Music File"
        android:gravity="center"
        >

    </TextView>
   <TextView
       android:background="@drawable/ic_baseline_music_note_24"
       android:layout_margin="10dp"
       android:layout_width="150dp"
       android:layout_height="200dp">

   </TextView>
    <Button
        android:text="Pilih File"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9F3434">

    </Button>

    <Button
        android:text="Upload File"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9F3434">

    </Button>

    <TextView
        android:id="@+id/tv_btn_lihat_rate_music"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#F3EDED"
        android:text="Lihat Rate User"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0C0B0B">

    </TextView>

    <TextView
        android:id="@+id/tv_btn_lihat_music_list"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#F4EFEF"
        android:text="Lihat List Music"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#6A6767">

    </TextView>



</LinearLayout>
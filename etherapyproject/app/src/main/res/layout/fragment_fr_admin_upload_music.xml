<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".view.fragment_admin.FrAdminUploadMusic">
    <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Music File"
        android:gravity="center"
        >

    </TextView>
    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_width="2dp"
        android:layout_marginBottom="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/music_ill">

    </de.hdodenhof.circleimageview.CircleImageView>
    <Button
        android:id="@+id/btn_pilih_file"
        android:text="Pilih File"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9F3434">

    </Button>

    <Button
        android:id="@+id/btn_upload_file"
        android:text="Upload File"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9F3434">

    </Button>

    <TextView
        android:id="@+id/tv_btn_lihat_rate_music"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#F3EDED"
        android:text="Lihat Music List"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0C0B0B">

    </TextView>







</LinearLayout>
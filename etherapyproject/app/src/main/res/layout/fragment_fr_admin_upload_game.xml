<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".view.fragment_admin.FrAdminUploadGame">

    <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Quis"
        android:gravity="center"
        >

    </TextView>
    <EditText
        android:background="#EDEBD5"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </EditText>
    <Button
        android:id="@+id/btn_upload_quiz"
        android:text="Upload Quiz"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9F3434">

    </Button>

    <TextView
        android:id="@+id/tv_btn_admin_lihat_quiz"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#F3EDED"
        android:text="Lihat Jawaban User"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0C0B0B">

    </TextView>







</LinearLayout>